<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
    android:id="@+id/project_details_app_bar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#F9F9F9"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/project_details_icon_go_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:gravity="start"
        android:src="@drawable/icon_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center"
        android:text="제품제목"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/search_icon_go_home"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:gravity="end"
        android:src="@drawable/icon_home" />
</LinearLayout>

    <TableLayout
        android:id="@+id/project_details_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#B3F9F9F9"
        android:gravity="center"
        android:layout_below="@+id/project_details_app_bar">

        <ImageView
            android:id="@+id/activity_search_icon_go_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/icon_back" />

    </TableLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/project_details_tab_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/project_details_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="310dp"
                android:src="@drawable/image_global_fragment" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/project_details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/project_details_title"
                    android:textSize="21sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/project_details_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홈리빙"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/project_details_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/project_details_info_text"
                    android:layout_marginTop="40dp"
                    android:lineSpacingExtra="5dp"/>

                <TextView
                    android:id="@+id/project_details_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12일 남음"
                    android:layout_marginTop="40dp"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <ProgressBar
                    android:id="@+id/project_details_progress_bar"
                    android:max="100"
                    android:progress="50"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progressbar_rewardhome"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="20dp"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TableRow>
                        <TextView
                            android:id="@+id/project_details_achievement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1587"
                            android:textSize="20sp"
                            android:textColor="#000000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="% 달성"
                            android:layout_marginStart="5dp"/>

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/project_details_funded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7,937,600"
                            android:textSize="20sp"
                            android:textColor="#000000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원 펀딩"
                            android:layout_marginStart="5dp"/>

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/project_details_supporter_cnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="231"
                            android:textSize="20sp"
                            android:textColor="#000000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="명의 서포터"
                            android:layout_marginStart="5dp"/>

                    </TableRow>

                </TableLayout>

                <TextView
                    android:id="@+id/project_details_btn_fund"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/sign_up_validate_btn"
                    android:gravity="center"
                    android:text="펀딩하기"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TableRow>
                        <Button
                            android:id="@+id/project_details_like_cnt_btn"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/login_etc_btn_style"
                            android:text="26" />

                        <Button
                            android:id="@+id/project_details_ask_btn"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/login_etc_btn_style"
                            android:text="문의" />

                        <Button
                            android:id="@+id/project_details_share_btn"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/login_etc_btn_style"
                            android:text="공유하기" />

                    </TableRow>
                </TableLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="펀딩하기는 쇼핑하기가 아닙니다!"
                    android:layout_marginTop="3dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mainColor"
                    android:layout_marginTop="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목표 금액"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lineColor"
                    android:layout_marginTop="30dp"/>


            </LinearLayout>

            <com.softsquared.wadiz.src.projectDetails.RoadView
                android:id="@+id/wv_detail"
                android:layout_width="match_parent"
                android:layout_height="400dp"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center"
        android:padding="5dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_alarm"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@drawable/login_etc_btn_style"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_show_all"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@drawable/login_etc_btn_style"
            android:layout_marginStart="5dp"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="펀딩하기"
            android:background="@color/mainColor"
            android:layout_weight="4"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
</RelativeLayout>