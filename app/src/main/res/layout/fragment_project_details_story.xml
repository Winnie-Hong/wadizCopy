<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


        <LinearLayout
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/project_details_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@drawable/image_project_details_thumbnail" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/project_details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/project_details_title"
                    android:textColor="#000000"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/project_details_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="홈리빙" />

                <TextView
                    android:id="@+id/project_details_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/project_details_info_text" />

                <TextView
                    android:id="@+id/project_details_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="12일 남음"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/project_details_progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="20dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/progressbar_rewardhome" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/project_details_achievement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1587"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="% 달성" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/project_details_funded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7,937,600"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="원 펀딩" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/project_details_supporter_cnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="231명"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="의 서포터" />

                </LinearLayout>


                <TextView
                    android:id="@+id/project_details_btn_fund"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/sign_up_validate_btn"
                    android:gravity="center"
                    android:text="펀딩하기"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TableRow>

                        <Button
                            android:id="@+id/project_details_like_cnt_btn"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/login_etc_btn_style"
                            android:text="26" />

                        <Button
                            android:id="@+id/project_details_ask_btn"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/login_etc_btn_style"
                            android:text="문의" />

                        <Button
                            android:id="@+id/project_details_share_btn"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/login_etc_btn_style"
                            android:text="공유하기" />

                    </TableRow>
                </TableLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="펀딩하기는 쇼핑하기가 아닙니다!" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@color/mainColor">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목표 금액" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/lineColor" />


            </LinearLayout>

            <com.softsquared.wadiz.src.projectDetails.fragmentPages.story.RoadView
                android:id="@+id/wv_detail"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" />

        </LinearLayout>


</androidx.core.widget.NestedScrollView>