<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:layout_marginTop="12dp">

    <ImageView
        android:id="@+id/icon_category"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="[남자 필독] 남자의 00이 밝아지는 톤업크림 매너 톤업크림"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">

            <TextView
                android:id="@+id/tv_project_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뷰티"
                android:textSize="12sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:background="#cfcfcf"/>

            <TextView
                android:id="@+id/tv_project_makername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="젠틀프로젝트"
                android:textSize="12dp"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar_rewardhome"
            android:max="100"
            android:progress="50"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar_rewardhome"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_project_achievement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52%"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/mainColor"/>

            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginHorizontal="5dp"
                android:background="#cfcfcf" />

            <TextView
                android:id="@+id/tv_project_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="542,000원"
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/tv_project_remaining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11일 남음"
                android:gravity="end"
                android:textSize="12dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
