<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="5dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/supporter_profile_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/supporter_profile_img"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/supporter_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍송화님이 14,400원 펀딩으로 참여하였습니다."
            android:textColor="#000000"
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/supporter_details"
            android:layout_alignStart="@+id/supporter_details"
            android:layout_marginTop="5dp"
            android:text="한 시간 전" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lineColor" />

</RelativeLayout>