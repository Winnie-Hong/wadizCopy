<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/project_details_reward_border"
    android:orientation="vertical"
    android:padding="28dp"
    android:layout_marginBottom="5dp">


        <TextView
            android:id="@+id/project_details_reward_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100,000원 펀딩"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/project_details_reward_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="한정수량 [와디즈 이벤트 3인 set]"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="구성품"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/project_details_reward_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="5dp"
            android:text="@string/project_details_reward_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="배송비" />

        <TextView
            android:id="@+id/project_details_reward_shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="3,500"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="리워드 발송 시작일" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2020년 01월 중순(11~20)일 예정"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/project_details_reward_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제한수량 몇 개"
                android:textSize="13sp"
                android:textColor="@color/quantity_color_violet"/>

            <TextView
                android:id="@+id/project_details_reward_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 몇 개 남음!"
                android:layout_marginStart="10dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:background="#ded6ff"
                android:textColor="@color/quantity_color_violet"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/project_details_reward_completion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제한수량 300개"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:textColor="#000000"/>

</LinearLayout>