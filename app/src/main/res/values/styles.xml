<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="small_bold_font"  parent="@android:style/Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="small_lignt_font"  parent="@android:style/Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>


    <style name="policy_checkbox_text_light"  parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textColor">#cfcfcf</item>
    </style>


    <style name="policy_checkbox_text_selected"  parent="@android:style/Widget.TextView">
    <item name="android:textSize">16sp</item>
    <item name="android:lineSpacingExtra">5dp</item>
    <item name="android:textColor">#808080</item>
</style>

    <style name="profileBigFont"  parent="@android:style/Widget.TextView">
    <item name="android:textSize">30sp</item>
    <item name="android:textColor">#3363ff</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
</style>

    <style name="profileSmallFont"  parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#3363ff</item>
    </style>

</resources>
